@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
  <div class="jumbotron text-center">
    <h2>Stylists</h2>
  </div>
  @if (@Model.Count == 0)
  {
    <h3>No Stylists have been added yet. Please first add a stylist to add their Clients</h3>
  }

  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new Stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>